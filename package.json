{
  "name": "pomododo",
  "version": "1.0.0",
  "description": "Minimal pomodoro app for linux, macos & windows",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "pack": "electron-builder --dir",
    "build": "electron-builder"
  },
  "author": {
    "name": "dilpreetsio",
    "email": "idilpreetsio@gmail.com"
  },
  "license": "MIT",
  "build": {
    "appId": "com.dilpreetsio.pomododo",
    "mac": {
      "category": "Utility"
    },
    "linux": {
      "category": "Utility",
      "icon": "builds/icon.icns",
      "target": [
        "deb",
        "snap"
      ]
    },
    "directories": {
      "buildResources": "build"
    }
  },
  "compression": "store",
  "devDependencies": {
    "electron": "^9.1.0",
    "electron-builder": "^22.8.0",
    "electron-reloader": "^1.0.1",
    "styled-components": "^5.1.1"
  },
  "dependencies": {
    "custom-electron-titlebar": "^3.2.3"
  }
}
